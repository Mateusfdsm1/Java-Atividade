   import javax.swing.JOptionPane;
    public class Exercicios1 {
    public static void main(String[] args) {          
             double h, peso1, peso2;
             int sexo;
             
             h = Double.parseDouble(JOptionPane.showInputDialog("Digite sua altura"));
             sexo = Integer.parseInt(JOptionPane.showInputDialog("Insira seu sexo (1) mulher e (2) homem:"));
             
             peso1 = (62.1*h)-44.7;
             peso2 = (72.7*h)-58.0;
             
             
             if(sexo == 1){
                 JOptionPane.showMessageDialog(null,"O peso ideal para sua altura é " + peso1);
             }
             else{
                 JOptionPane.showMessageDialog(null,"O peso ideal para sua altura é " + peso2);
             }
             
            
                     
        }       
    } 
